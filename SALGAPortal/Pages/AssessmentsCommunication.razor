@if (OpenAssessmentsViewModel != null)
{
<EditForm Model="@OpenAssessmentsViewModel">
    <div class="row">
        <div class="col">
            <div class="form-check">
                <InputCheckbox @bind-Value="@OpenAssessmentsViewModel.NewAssessmeent" class="form-check-input"/>
                <label class="form-check-label"> New Assessment</label>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>Start</th>
                        <th>End</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Assessment duration:</td>
                        <td><InputDate @bind-Value="@OpenAssessmentsViewModel.StartDate" /></td>
                        <td><InputDate @bind-Value="@OpenAssessmentsViewModel.EndDate" /></td>
                        <td><button type="button" value="datesApply" @onclick="(()=>UpdateTextFromDateChange())" class="btn btn-primary" style="background-color: #f46d16; border: none; margin-left: 1em;">Apply</button></td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
    <div class="row mt-5">
        <div class="col-1">
            To:
        </div>
        <div class="col">
            @foreach (var municipality in OpenAssessmentsViewModel.ToMunicipalities)
            {
                <span class="badge rounded-pill bg-secondary ">@municipality.Name  </span>
            }

        </div>
    </div>
    <div class="form-group row mt-3">
        <label class="col-2 col-form-label">Subject:</label>
        <div class="col">
            <InputText type="text"  class="form-control" @bind-Value="@OpenAssessmentsViewModel.SubjectText"/>
        </div>
    </div>
    <div class="form-group mt-3">
        <label>Message:</label>
        <InputTextArea class="form-control" style="height:500px" @bind-Value="@OpenAssessmentsViewModel.BodyText"></InputTextArea>
    </div>
</EditForm>

}




