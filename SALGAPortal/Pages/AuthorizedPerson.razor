

<EditForm Model="@AuthorizedPersonViewModel">

    <div class="form-group row">
        <label class="col-4 col-form-label">Email Address:</label>
        <div class=" col-8">
            <InputText @bind-Value="@AuthorizedPersonViewModel.Email" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-4 col-form-label">Landline:</label>
        <div class="col-8">
            <InputText @bind-Value="@AuthorizedPersonViewModel.Phone" />
        </div>

    </div>
    <div class="form-group row">
        <label class="col-4 col-form-label">Phone:</label>
        <div class="col-8">
            <InputText @bind-Value="@AuthorizedPersonViewModel.CellPhone" />
        </div>

    </div>
    <div class="form-group row">
        <label class="col-4 col-form-label">Is Active:</label>
        <div class="col-8">
            <InputCheckbox @bind-Value="@AuthorizedPersonViewModel.Active" />
        </div>
    </div>
    <div class="modal-footer">
        <div class="d-flex justify-content-end">
            <button type="submit" value="answersSave" class="btn btn-primary mx-auto" @onclick="(()=>OnSave())" data-bs-dismiss="modal">Save</button>
        </div>
    </div>
</EditForm>


