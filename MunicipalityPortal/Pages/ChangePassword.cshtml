@page
@model SALGAWeb.Pages.ChangePasswordModel
@{
}
<form method="post">
    <div class="card">
        <div class="card-header bg-dark">
            <i class="fas fa-info-circle fa-lg "></i>
            <text class="text-light">
                Please enter and confirm your new password
            </text>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">New Password</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label">Confirm New Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <br />

                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
        </div>
        <div class="card-footer">
            <div class="text-center">
                <button type="submit" class="btn btn-dark" value="submit">Reset Password</button>
            </div>
        </div>

    </div>
</form>
